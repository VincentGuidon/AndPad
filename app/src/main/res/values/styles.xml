<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorLightBlue</item>
        <item name="colorControlHighlight">@color/colorLightBlue</item>
    </style>

    <style name="NoteTitleEditStyle">
        <item name="android:textColor">@color/colorMainWhite</item>
        <item name="android:textColorHint">@color/colorMainWhite</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
